<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/side_distance"
    android:animateLayoutChanges="true"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/small_distance">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/result_header_m"
                android:layout_marginEnd="@dimen/small_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_meaningful_value"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:background="@drawable/result_element_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/small_distance">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/result_header_b"
                android:layout_marginEnd="@dimen/small_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_comprehension_value"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:background="@drawable/result_element_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/small_distance">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/result_header_h"
                android:layout_marginEnd="@dimen/small_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_manageability_value"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:background="@drawable/result_element_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/result_total_background"
            android:padding="@dimen/small_distance">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/result_header_total"
                android:layout_marginEnd="@dimen/small_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_total_value"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/small_size"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/result_element_total_background"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/separator_width"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_marginEnd="@dimen/small_distance"
        android:layout_marginStart="@dimen/small_distance"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>