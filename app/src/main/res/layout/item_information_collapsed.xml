<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_distance"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:contentDescription="@string/result_arrow_content_description"
        android:src="@drawable/baseline_play_arrow_black_24"
        android:layout_marginEnd="@dimen/small_distance"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/small_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header"
            android:layout_marginBottom="@dimen/small_distance"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>